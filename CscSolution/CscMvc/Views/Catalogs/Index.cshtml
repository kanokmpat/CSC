@model IPagedList<CscMvc.Models.tbSystemCatalog>
@using PagedList; 
@using PagedList.Mvc; 

<div class="box">
    <div class="box-header">
        <h3 class="box-title"> ข้อมูล Catalog </h3>
    </div>

    <!-- /.box-header -->
    <div class="box-body">
        <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
            <!-- /.box-header -->
                <div class="box-body">
                <div class="">
                    <!-- /.box-body -->
                    <form asp-controller="Catalog" asp-action="Index" method="get">
                        <div class="input-group margin">
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fa fa-fw fa-search"></i>
                                </button>
                            </div>
                            <!-- /btn-group -->
                            <input type="text" class="form-control" id="Search_Name" name="Search_Name">
                        </div>
                        <div class="input-group margin">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-block btn-info">
                                    @Html.ActionLink("เพิ่มใหม่", "Create",
                             new { id = "" }, // <-- Route arguments

                             new { @style = "color: rgba(255, 255, 255, 0.9); display: inline-block; margin-right: 10px; text-decoration: none;" }// <-- htmlArguments
                             )
                                </button>
                            </div>
                            <div class="input-group margin">
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-block btn-info">
                                        @Html.ActionLink("Excal", "",
                             new { id = "" }, // <-- Route arguments

                             new { @style = "color: rgba(255, 255, 255, 0.9); display: inline-block; margin-right: 10px; text-decoration: none;" }// <-- htmlArguments
                             )
                                    </button>
                                </div>
                            </div>
                            <div class="input-group margin">
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-block btn-info">
                                        @Html.ActionLink("PDF", "",
                             new { id = "" }, // <-- Route arguments

                             new { @style = "color: rgba(255, 255, 255, 0.9); display: inline-block; margin-right: 10px; text-decoration: none;" }// <-- htmlArguments
                             )
                                    </button>
                                </div>
                            </div>

                        </div>
                        <br>
                        <!-- /.box-footer -->
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="dataTables_length" id="example1_length">
                                    <label>
                                        Show
                                        <select name="pageSize" id="pageSize" aria-controls="example1" class="form-control input-sm">

                                            <option value="10">10</option>
                                            <option value="25">25</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>

                                        </select> entries
                                    </label>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div id="example1_filter" class="dataTables_filter">
                                </div>
                            </div>

                        </div><div class="row">
                            <div class="col-sm-5"><div class="dataTables_info" id="example1_info" role="status" aria-live="polite">Showing @ViewBag.Page to @ViewBag.PageMax of @ViewBag.TotalPage entries</div></div><div class="col-sm-7">
                                <div class="dataTables_paginate paging_simple_numbers" id="" name="">
                                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                                </div>
                            </div>
                        </div>
                        </div>

                    <div id="container" style="margin-left: 20px">
                        <p></p>
                        <p></p>
                      
                    </div>    
                    </form>
                    <div class="row">
                    <div class="col-sm-12">

                        <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                            <thead>
                                <tr role="row">
                                    <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending"
                                        aria-label="Rendering engine: activate to sort column descending" style="width: 217.8px;">รหัส</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"
                                        aria-label="Browser: activate to sort column ascending" style="width: 266.6px;">ชื่อย่อ</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"
                                        aria-label="Platform(s): activate to sort column ascending" style="width: 237px;">ชื่อ</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"
                                        aria-label="Platform(s): activate to sort column ascending" style="width: 237px;">รายละเอียด</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"
                                        aria-label="Platform(s): activate to sort column ascending" style="width: 237px;">วันที่แก้ไข</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"
                                        aria-label="Platform(s): activate to sort column ascending" style="width: 237px;">แก้ไขโดย</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1"
                                        aria-label="Platform(s): activate to sort column ascending" style="width: 237px;">จัดการ</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr role="row" class="odd">
                                        <td class="sorting_1">@Html.DisplayFor(modelItem => item.CatalogCode)</td>
                                        <td>@Html.DisplayFor(modelItem => item.CatalogPrefix)</td>
                                        <td>@Html.DisplayFor(modelItem => item.CatalogName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Remark)</td>
                                        <td>@Html.DisplayFor(modelItem => item.CreateDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ModifyBy)</td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit",
                                      new { id = item.ID, CatalogID = item.CatalogID }, // <-- Route arguments
                                       new { @class = "btn btn-sm btn-info btn-flat pull-left", data_val = "" } // <-- htmlArguments
                                     )
                                            @Html.ActionLink("Details", "Details",
                                       new { id = item.ID, CatalogID = item.CatalogID }, // <-- Route arguments
                                       new { @class = "btn btn-sm btn-info btn-flat pull-left", data_val = "" } // <-- htmlArguments
                                     )
                                            @Html.ActionLink("Delete", "Delete",
                                        new { id = item.ID, CatalogID = item.CatalogID }, // <-- Route arguments
                                       new { @class = "btn btn-sm btn-info btn-flat pull-left", data_val = "" } // <-- htmlArguments
                                     )
                                        </td>
                                    </tr>
                                }

                            </tbody>

                        </table>
                    </div>
                
            </div>
    </div>
    <!-- /.box-body -->
</div>
